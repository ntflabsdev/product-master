@model Product_Master.Models.Logins
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string Usertype = TempData["UserType"] != null ? TempData["UserType"].ToString() : "";
}
<style>
    .row {
        margin-bottom: 12px;
    }

    .btn-success1 {
        text-align: center;
        margin: auto;
        color: #fff;
        background-color: #69ba71;
        border-color: #4d6066ee;
        width: 80px;
        height: 45px;
    }
</style>
@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container" style="text-align:center;padding-left:300px">
        <div class="row">
            <div class="col-md-2"><label for="uid"><b>UserName</b></label></div>
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.username, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label for="psw"><b>Password</b></label>
            </div>
            <div class="col-md-4">
                @Html.PasswordFor(x => x.password, new { @class = "form-control" })
            </div>
        </div>
        <div class="row"></div>
        <div class="row">
            <div class="col-md-2">
                <label></label>
            </div>
            <div class="col-md-4">
                <input type="submit" id="btnlogin" class="btn-success1" value="Login" />
                @Html.ActionLink("Register Here", "InternalRegister", "Login", new { @usertype = TempData["UserType"].ToString(), @id = "InternalRegister" })
                @Html.ActionLink("Register Here", "ExternalRegister", "Login", new { @usertype = TempData["UserType"].ToString(), @id = "ExternalRegister" })
            </div>
        </div>


        <div class="row">
            <div class="col-md-2">
                <label></label>
            </div>
            <div class="col-md-4">
                <label id="errormessage" style="color:red;"></label>
            </div>
        </div>
    </div>
    <script type="text/javascript">

    if ("@Usertype" === "Internal User")
           {
            $("#InternalRegister").show();
            $("#ExternalRegister").hide();
           }
           else
           {
               $("#InternalRegister").hide();
            $("#ExternalRegister").show();
           }
        $('#btnlogin').on("click", function (event) {
               var username = $('#username').val();
               var password = $('#password').val();
               if (username === '' || password === '') {
                $('#errormessage').text( "Username or Password should not empty.");
                   return false;
               }
               else {
                   return true;
               }
           })


    </script>
}


